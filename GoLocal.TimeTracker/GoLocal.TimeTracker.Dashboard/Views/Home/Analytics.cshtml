@model GoLocal.TimeTracker.Dashboard.ViewModels.MyMonthlyHoursViewModel
@inject LocService SharedLocalizer
@{
    ViewBag.Title = @SharedLocalizer.GetLocalizedHtmlString("lblAnalytics");
}
