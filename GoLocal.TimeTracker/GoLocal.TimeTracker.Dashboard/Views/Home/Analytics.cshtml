                <span class="Reported" style="display:none;text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("NoOvertimeReported") <span class="ReportMonth"></span></span>
            </div>
            <div class="ms-Grid-col ms-sm12 ms-lg12" id="canvas">
