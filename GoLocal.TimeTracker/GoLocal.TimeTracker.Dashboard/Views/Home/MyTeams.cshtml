                        { "data": "adjustedHours", "orderable": false },
                        { "data": "objectIdentifier", "visible": false },
                        { "data": "id", "visible": false },
                        { "data": "date", "visible": false },
                        { "data": "status", "orderable": false },
                        { "data": "action", "orderable": false }
