                        $("#btnEditHrs").attr("disabled", false);
                        $(".btnReviseRequest").attr("disabled", false);

                        $(".alert-danger").fadeTo(2000, 500).slideUp(500, function () {
                            $(".alert-danger").slideUp(500);
                            $("#btnEditHrs").attr("disabled", false);
                            $(".alert-danger").addClass("hidden");
                        });

