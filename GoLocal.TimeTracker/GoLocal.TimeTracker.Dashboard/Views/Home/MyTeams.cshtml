                                $("#SubmitOnMsg").removeClass('hidden').show();
                                $("#submittedDate").text(@Model.SubmittedDate);
                            } else {
                                $("#SubmitToHRBtn").prop("disabled", true);
                                if (json.submittedDate != "" && json.submittedDate != "1/1/0001") {
                                    $("#SubmitOnMsg").addClass('hidden').show();
                                    $("#submittedDate").text('');
                                }
                            }
